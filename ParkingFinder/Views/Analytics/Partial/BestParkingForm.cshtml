@model ParkingFinder.Models.AnalyticsBestParkingFormViewModel

<div class="Teaser">
    <h2>Best Parking Times</h2>
    <div class="content">
        <form class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-2" for="bestParkingParkade">Parkade:</label>
                <div class="col-sm-10">
                    @Html.DropDownList("bestParkingParkade", Model.AvailableParkades, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-sm-2" for="bestParkingDate">Date:</label>
                <div class="col-sm-10">
                    @Html.DropDownList("bestParkingDate", Model.AvailableDates, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="button" class="btn btn-default" id="SubmitBestParkingForm">Request</button>
                </div>
            </div>
        </form>
        <div id="BestParkingResult">
            <div style="visibility: hidden;">
                <div class="content">
                    <b>
                        <br/>
                        <br/>
                    </b>
                </div>
            </div>

        </div>
    </div>
</div>